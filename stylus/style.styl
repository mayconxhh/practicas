@import 'nib'

.img
	width 70px
	border-radius 50%

*
	font-family 'Open Sans' sans-serif
	margin 0
	padding 0
	font-size 16px

.header
	z-index 1
	width 100%
	background-color blue
	position fixed
	&__mob
		height 88px
		display block 
		.mob__avatar
			position absolute
			display inline-block
			margin 0.5em				
		.mob__icon
			cursor pointer
			display inline-block
			float right
			a 
				font-weight bold
				color white
				text-decoration none
				font-size 1.5em
				display block 
				padding 1em 0.5em
	&__desktop
		.desktop__avatar
			display none
			margin 0.5em
		.desktop__nav
			left -100%
			height auto
			position fixed
			width 100%
			background-color red
			text-align center
			.nav__ul
				list-style none
				.nav__li
					border-bottom 1px solid white
					a
						padding 0.6em 0
						display block
						font-weight bold
						text-decoration none
						color white
						font-size 1.3em
					:hover
						background-color blue
						


.main 
	padding-top 6em
	text-align center
	&__box
		background-color red
		margin 0 auto
		width 100%
		padding 1em 0
	&__item
		padding 1em 0
		margin 2em 0
		background-color aqua
		img
			max-width 100%
.capa
	padding-top 6em
	text-align center
	&__box
		background-color red
		margin 0 auto
		width 100%
		padding 1em 0
		background-color aqua
		margin 0 auto
		width 100%
		padding 1em 0
	&__item
		padding 1em 0
		margin 2em 0
		img
			max-width 100%

.vid
	background-color #E7AA88 
	padding 3em 0
	&__box
		margin 0 
		max-width 100%
		text-align center
	&__art
		margin-bottom 1em
		display inline-block
		width 45%
	&__mascota
		margin-top 1em
		display inline-block
		width 45%
		background-color aqua
	&__hijo
		display inline-block
		width 45%	
		



.video
	height 0
	padding-bottom 56.25%
	position relative
	overflow hidden
	
iframe,
object,
embed,
video
	width 100%
	height 100%
	position absolute
	right 0
	left 0
	


.colum
	padding 5em 0
	background-color crimson
	&__box1
		padding 1.5em
		background-color coral
		h3
			text-align center
			font-size 1.5em	
			


.image
	padding 2em 0
	background-color crimson
	&__box
	&__content
		padding 1em 0
		figure
			width 100%
			img
				background-color orange
				width 100%


.cuerpo
	text-align center
	padding 3em 0
	&__box
		width 100%
	&__caja
		border-radius 5%
		max-width 400px
		margin 1em auto
		background-color chocolate
		.caja__text
			padding 1em 0
			margin 0 auto
			width 90%
			h3
				margin-bottom 1em
			p
				text-align left
	
.imagen
	width 100%
	&__box
		margin auto
	&__art
		margin 1em auto
		max-width 440px
		background-color crimson
		border-radius 50%
		text-align center
		img
			width 100%


.btn
	padding 2em 0
	background-color #D4EFDF
	&__child
		margin 1em .5em
		text-align center
		background-color #5DADE2  
		border-radius 10px
		border-bottom 4px solid #2E86C1
		&:hover
			background-color #F1C40F  
			border-bottom 4px solid #F39C12 
		a	
			margin auto 
			padding 1em
			display block
			text-decoration none
			color white
			
.btn2
	background-color #EFF2E7
	padding 2em 0
	&__box
		margin auto
		text-align center
		width 90%
	&__text
		margin 1em 0
		h3
			font-size 1.5em
	&__botones
		margin auto
		text-align center
		width 50%
		.botones
			padding 1em 0
			background-color #7DCD40
			margin 1em 0
			border-radius 10px
			border-bottom 4px solid #58902D
			&:hover
				background-color #FF4842
				border-bottom 4px solid #C06461
			a 
				text-decoration none
				color white

.portada
	background url(../image/z.jpg)
	background-repeat no-repeat
	background-size cover
	&__text
		vertical-align top
		padding 1em
		padding-top 3em
		text-align left
		h1
			width 100%
			line-height 1.2
			font-size 2em
			color white   
		.boton
			text-align center
			width 140px
			padding 1em 0
			background-color #7DCD40
			margin 1em 1em 1em 0
			border-radius 10px
			border-bottom 4px solid #58902D
			&:hover
				background-color #FF4842
				border-bottom 4px solid #C06461
			a 
				text-decoration none
				color white
		a
			color white
			text-align left
			&:hover
				color #FF4842
	.platzi__video
		width 100%
		
			

@media screen and (min-width 321px)
	body
		background-color peru
.vid
	&__box
		margin 0
		max-width 100%
		text-align center
	&__art
		display block
		width 100%
	&__mascota
		display block
		width 100%
		background-color aqua
	&__hijo
		display block
		width 100%	
.image
	&__box
		text-align center
	&__content
		figure
			img
				max-width 400px
				
@media screen and (min-width 768px)
	.header
		&__mob
			display none
		&__desktop
			.desktop__avatar
				float left
				display inline-block
			.desktop__nav
				height 93px
				position initial
				.nav__ul
					.nav__li
						width 20%
						display inline-block
						border-bottom none
						:hover
							border-bottom 4px solid aqua
						a
							border-bottom: 4px solid red;
							line-height 3.05
	.main
		&__box		
			padding 1em 0
			display inline-block
			max-width 900px
		&__item 
			margin 0
			width 45%
			display inline-block   		
			img
				width 350px
	.vid
		&__box
			margin 0
			max-width 100%
			text-align center
		&__art
			margin 0 2%
			display inline-block
			width 45%
		&__mascota
			margin 0 2%
			display inline-block
			width 45%
			background-color aqua
		&__hijo
			margin 0 2%
			display inline-block
			width 45%
	.colum
		&__box
			margin 0 auto
			text-align center
			width 90% 
		&__box1
			p
				text-align left
		&__art
			height auto
		&__box2
			margin auto
			max-width 45%
	.image
		&__box
			text-align center
			margin 0 auto
			width 90%
			background-color chocolate
		&__content
			padding 1em
			display inline-block
			width 45%
			figure
				img
	.cuerpo
		&__box
			width 90%
			margin auto
		&__caja			
			vertical-align top
			margin 1%
			width 45%
			display inline-block	
	
	.imagen
		&__box
			margin 1em auto
			text-align center
			width 90%
		&__art
			display inline-block
			width 45%			
			margin 0 1%	
			img
				width 100%	
				
	.btn
		&__box
			text-align center
			margin 0 auto
			width 90%
		&__child
			display inline-block
			width 45%
			
	.btn2
		&__text
			display inline-block
			width 45%
		&__botones
			display inline-block 
			width 45%
			.botones
				margin 3%
				display inline-block
				width 40%
				
	.portada
		&__box
			text-align center
		&__text
			max-width 45%
			text-align left
			display inline-block
			.boton
				display inline-block
		.platzi__video
			padding 2em
			display inline-block
			width 30%

@media screen and (min-width 1000px)
	body
		background-color blue
	.vid
		&__box
			margin 0 auto
			text-align center
			padding 1em 0
			max-width 90%
		&__art
			margin 0 .5em
			width 30%
		&__mascota
			margin 0 .5em
			width 30%
		&__hijo
			margin 0 .5em
			width 30%
	.colum
		&__box
			width 90%
		&__art
			vertical-align top
			width 45%
			display inline-block
		&__box1
			padding 5% 0
			h3
				padding-bottom 2em
			p
				margin auto
				width 90%
		&__box2
			vertical-align top
			width 45%
			display inline-block
	.image
		&__box
			background-color peru
		&__content
			width 30%
	

	.cuerpo
		&__box
			width 96%
		&__caja
			width 22%
	

	.imagen
		&__art		
			width 30%

	.btn
		&__child
			width 30%